<%- include("../components/nav") %>
<div class="main-content">
<!-- Sidebar -->
<!-- Main Content -->
    <!-- Header -->
    <div class="header">
        <div style="display: flex; align-items: center; gap: 30px;">
            <div class="github-icons">
                <i class="fab fa-github"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-code-branch"></i>
                <i class="far fa-bookmark"></i>
            </div>
            <h1 class="header-title">Edit Customer</h1>
        </div>
    </div>
    <!-- Form -->
    <div class="form-container">
        <form id="editCustomerForm" action="/edit-customer/<%=user['_id']%>?_method=PUT" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" id="editFullName" class="form-control-custom" name="name" value="<%= user.name %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Gender</label>
                    <select class="form-control-custom" name="gender" id="editGender" required>
                        <h1><%= user.gender %></h1>

                        <% if (user.gender.toLowerCase() === "male") { %>
                            <option value="Male" selected>Male</option>
                            <option value="Female">Female</option>
                        <% } else if (user.gender.toLowerCase() === "female") { %>
                            <option value="Male">Male</option>
                            <option value="Female" selected>Female</option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Country</label>
                    <select name="country" class="form-control-custom" id="gender" required>
                        <option value=""><%= user.country?user.country["name"]: "Choose Country" %></option>
                        <% states.forEach(element => { %>
                            <option value="<%=element['_id']%>"><%=element['name']%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Age</label>
                    <input type="number" name="age" class="form-control-custom" id="editAge" value="<%= user["age"]%>" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" type="email" class="form-control-custom" id="editEmail" value="<%= user["email"]%>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Phone</label>
                    <input type="tel" name="phone" class="form-control-custom" id="editPhone" value="<%= user["phone"]%>" required>
                </div>
            </div>
            <div class="form-buttons">
                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i> Update Customer
                </button>
                <button type="button" class="btn-cancel" onclick="window.location.href='/'">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </form>
    </div>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="js/script.js"></script>
</body>
</html>