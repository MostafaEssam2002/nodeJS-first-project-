<%- include("../components/nav") %>
        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <div class="header">
                <div style="display: flex; align-items: center; gap: 30px;">
                    <div class="github-icons">
                        <i class="fab fa-github"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-code-branch"></i>
                        <i class="far fa-bookmark"></i>
                    </div>
                    <h1 class="header-title">Customer Details</h1>
                </div>
                <button class="btn-back" onclick="window.location.href='index.html'">
                    <i class="fas fa-arrow-right"></i> Back to Home
                </button>
            </div>

            <!-- Customer Details -->
            <div class="details-container">
                <div class="customer-card">
                    <div class="customer-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="customer-info">
                        <div class="info-row">
                            <div class="info-label">Full Name:</div>
                            <div class="info-value" id="viewFullName"><%=user["name"]%></div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Gender:</div>
                            <div class="info-value" id="viewGender"><%=user["gender"]%></div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Country:</div>
                            <div class="info-value" id="viewCountry"><%=user["country"]%></div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Age:</div>
                            <div class="info-value" id="viewAge"><%=user["age"]%></div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Email:</div>
                            <div class="info-value" id="viewEmail"><%=user["email"]%></div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Phone:</div>
                            <div class="info-value" id="viewPhone"><%=user["phone"]%></div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Last Updated:</div>
                            <div class="info-value" id="viewUpdated"><%=moment(user["updatedAt"]).fromNow()%></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/script.js"></script>
</body>
</html>